<h1>Your Gears</h1>
  <div class="mb-5">
    <%= link_to 'Add Gear', new_dashboard_gear_path, class: "btn btn-primary"  %>
  </div>

  <% @gears.each do |gear| %>
    <div>
      <h2><%= gear.name %></h2>
      <div>Number: <%= gear.id %></div>
      <div>Description: <%= gear.description %></div>
      <div>Price (not right!): <%= gear.hourly_rate %></div>
    <div>
    <div class="d-flex">
      <div class="m-2"><%= link_to 'Edit', edit_dashboard_gear_path(gear), class: "btn btn-secondary" %></div>
      <div class="m-2">
        <%= form_with(url: dashboard_gear_path(gear), method: :delete, local: true, data: { confirm: 'Are you sure?' }) do |form| %>
        <%= form.submit 'Delete', class: 'btn btn-secondary' %>
        <% end %>
      </div>
    </div>
  <% end %>
