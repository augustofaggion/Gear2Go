<%= simple_form_for [:dashboard, gear], local: true do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :hourly_rate %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary"  %>
  </div>
<% end %>
